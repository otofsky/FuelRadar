<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imgLogo"
            android:src="@mipmap/shell"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <LinearLayout
            android:id="@+id/linearAddressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignTop="@+id/imgLogo"
            android:layout_toRightOf="@+id/imgLogo"
            android:layout_toEndOf="@+id/imgLogo">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Adres"
                android:id="@+id/txtAddress"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imgLogo"
                android:layout_toEndOf="@+id/imgLogo"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFuelPricesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/imgLogo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/linearAddressContainer"
            android:layout_alignStart="@+id/linearAddressContainer">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Cena"
                android:id="@+id/txtPrices"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imgLogo"
                android:layout_toEndOf="@+id/imgLogo"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
